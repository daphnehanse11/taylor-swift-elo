rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone to read the global ELO ratings
    match /globalELO/{document=**} {
      allow read: if true;
      allow write: if true; // In production, you might want to restrict this
    }

    // Allow anyone to read user stats (for sharing rankings)
    match /userStats/{userId} {
      allow read: if true;
      allow write: if true; // Anyone can update their own stats
    }

    // Allow anyone to write votes
    match /votes/{voteId} {
      allow read: if true;
      allow write: if true;
    }

    // Allow anyone to read and write unique users
    match /uniqueUsers/{userId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
